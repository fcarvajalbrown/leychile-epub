<anexo numero="II" titulo="Modelo de presentación de Cuenta Remate Martillero Concursal - Bienes Inmuebles">
  <formulario numero="1" nombre="Liquidación Bienes Inmuebles" hoja="1">
    <descripcion>Un bloque repetible por cada inmueble rematado</descripcion>
    <campos_por_inmueble>
      <campo nombre="Acta de Adjudicación" tipo="referencia"/>
      <campo nombre="Fecha" tipo="fecha"/>
      <campo nombre="Monto Total Adjudicación" tipo="moneda"/>
      <campo nombre="Garantía" tipo="moneda"/>
      <campo nombre="Saldo Precio" tipo="moneda"/>
      <campo nombre="Bien Inmueble inscrito a Fojas N.°" tipo="texto"/>
      <campo nombre="Conservador de Bienes Raíces" tipo="texto"/>
    </campos_por_inmueble>
    <totalizador concepto="Total Adjudicaciones Bienes Inmuebles" tipo="moneda"/>
    <seccion_singularizacion>
      <descripcion>Singularización de cada uno de los inmuebles</descripcion>
      <campos_cheque repetible="true">
        <campo nombre="Cheque N.°" tipo="texto"/>
        <campo nombre="Banco" tipo="texto"/>
        <campo nombre="Suma" tipo="moneda"/>
      </campos_cheque>
    </seccion_singularizacion>
    <firma rol="Martillero Concursal">Nombre y Firma</firma>
  </formulario>
  <formulario numero="2" nombre="Acta de Remate" hoja="2">
    <descripcion>Un acta por cada inmueble objeto de enajenación (adjudicados o no)</descripcion>
    <campos>
      <campo nombre="Fecha" tipo="fecha"/>
      <campo nombre="Lugar" tipo="texto"/>
      <campo nombre="Fecha del acta" tipo="fecha completa (día, mes, año)"/>
      <campo nombre="Notario Público" tipo="texto"/>
      <campo nombre="Martillero Concursal" tipo="texto"/>
      <campo nombre="Inmueble inscrito a fojas N.°" tipo="texto"/>
      <campo nombre="Conservador de Bienes Raíces" tipo="texto"/>
      <campo nombre="Procedimiento Concursal de Liquidación" tipo="texto (nombre deudor)"/>
      <campo nombre="Nombre Adjudicatario" tipo="texto"/>
      <campo nombre="Garantía" tipo="moneda"/>
      <campo nombre="Saldo Precio" tipo="moneda"/>
    </campos>
    <firmas>
      <firma rol="Notario Público">Nombre y Firma</firma>
      <firma rol="Martillero Concursal">Nombre y Firma</firma>
      <firma rol="Adjudicatario">Nombre y Firma</firma>
    </firmas>
  </formulario>
</anexo>
<anexo numero="III" titulo="Modelo de presentación de Cuenta Remate Martillero Concursal - Bienes Muebles">
  <formulario nombre="Liquidación Bienes Muebles">
    <seccion nombre="Ventas Netas">
      <lineas repetibles="true">
        <campo nombre="Liquidación Factura N.°" tipo="texto"/>
        <campo nombre="Monto" tipo="moneda"/>
      </lineas>
      <campo nombre="IVA Crédito Fiscal" tipo="moneda"/>
      <totalizador concepto="Total Ventas" tipo="moneda"/>
    </seccion>
    <seccion nombre="Menos: Gastos">
      <subseccion nombre="Facturas Gastos Publicidad">
        <lineas repetibles="true">
          <campo nombre="Factura N.°" tipo="texto"/>
          <campo nombre="Monto" tipo="moneda"/>
        </lineas>
      </subseccion>
      <subseccion nombre="Facturas Gastos Traslados">
        <lineas repetibles="true">
          <campo nombre="Factura N.°" tipo="texto"/>
          <campo nombre="Monto" tipo="moneda"/>
        </lineas>
      </subseccion>
    </seccion>
    <totalizador concepto="Total Liquidación" tipo="moneda" calculo="Total Ventas - Gastos Publicidad - Gastos Traslados"/>
    <seccion_cheque>
      <campo nombre="Cheque N.°" tipo="texto"/>
      <campo nombre="Banco" tipo="texto"/>
      <campo nombre="Suma" tipo="moneda"/>
    </seccion_cheque>
    <firma rol="Martillero Concursal">Nombre y Firma</firma>
  </formulario>
  <formulario nombre="Planilla de Remate">
    <tabla>
      <columnas>Lote | Ítem Inventario | Cantidad | Especie | Valor Mínimo | Valor Adjudicación | Nombre Adjudicatario</columnas>
    </tabla>
    <firma rol="Martillero Concursal">Nombre y Firma</firma>
  </formulario>
</anexo>
<anexo numero="IV" titulo="Modelo de presentación de Cuenta Remate Martillero Concursal - Bienes Muebles (Unidad Económica)">
  <formulario nombre="Acta de Realización Unidad Económica">
    <campos_encabezado>
      <campo nombre="Lugar" tipo="texto" ejemplo="En Santiago"/>
      <campo nombre="Fecha" tipo="fecha completa"/>
      <campo nombre="Notario Público" tipo="texto"/>
      <campo nombre="Martillero Concursal" tipo="texto"/>
      <campo nombre="Procedimiento Concursal de Liquidación" tipo="texto (nombre deudor)"/>
    </campos_encabezado>
    <seccion nombre="Composición de la Unidad Económica">
      <subseccion nombre="Bienes Inmuebles" repetible="true">
        <campo nombre="Bien Inmueble incautado a fojas N.°" tipo="texto"/>
        <campo nombre="Conservador de Bienes Raíces" tipo="texto"/>
      </subseccion>
      <subseccion nombre="Bienes Muebles">
        <descripcion>Individualización de cada una de las especies que se comprende o agregar anexo a la presente Acta. (Idéntico al inventario de bienes y las bases de la realización de bienes)</descripcion>
      </subseccion>
    </seccion>
    <campos_adjudicacion>
      <campo nombre="Nombre Adjudicatario" tipo="texto"/>
      <campo nombre="Garantía" tipo="moneda"/>
      <campo nombre="Saldo Precio" tipo="moneda"/>
    </campos_adjudicacion>
    <firmas>
      <firma rol="Notario Público">Nombre y Firma</firma>
      <firma rol="Martillero Concursal">Nombre y Firma</firma>
      <firma rol="Adjudicatario">Nombre y Firma</firma>
    </firmas>
  </formulario>
</anexo>
